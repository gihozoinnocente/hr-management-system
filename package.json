{
    "name": "capstone_api",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src /**/*.ts\" \"test /**/*.ts\"",
        "start": "yarn migrate && nest start",
        "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
        "start:dev": "set NODE_ENV=development && yarn migrate && nest start --watch",
        "start:debug": "set NODE_ENV=development && nest start --debug --watch",
        "start:prod": "set NODE_ENV=production && yarn migrate && node dist/main",
        "start:stg": "set NODE_ENV=staging && node dist/src/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest --runInBand",
        "test:watch": "set NODE_ENV=test && jest --watch",
        "test:cov": "set NODE_ENV=test && jest --coverage",
        "test:debug": "set NODE_ENV=test && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "set NODE_ENV=test && jest --config ./jest-e2e.json --coverage",
        "typeorm-custom-config": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/shared/config/typeorm.config.ts",
        "typeorm:create": "yarn typeorm-custom-config migration:create -n",
        "make:migrations": "yarn build && yarn typeorm-custom-config migration:generate -n",
        "migrate": "yarn build && yarn typeorm-custom-config migration:run"
    },
    "dependencies": {
        "@nestjs/axios": "^0.0.8",
        "@nestjs/common": "^8.2.6",
        "@nestjs/config": "^1.1.6",
        "@nestjs/core": "^8.2.6",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/passport": "^8.1.0",
        "@nestjs/platform-express": "^8.2.6",
        "@nestjs/schedule": "^1.1.0",
        "@nestjs/swagger": "^5.2.1",
        "@nestjs/testing": "^8.0.6",
        "@nestjs/typeorm": "8.0.2",
        "@sendgrid/mail": "^7.6.1",
        "@sentry/node": "^7.16.0",
        "@sentry/tracing": "^7.16.0",
        "@types/express-actuator": "^1.8.0",
        "@types/lodash": "^4.14.178",
        "@types/passport-jwt": "^3.0.6",
        "add": "^2.0.6",
        "africastalking-ts": "^0.0.3",
        "bcrypt": "^5.0.1",
        "body-parser": "^1.19.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "cookie": "^0.5.0",
        "cookie-parse": "^0.4.0",
        "cookie-parser": "^1.4.6",
        "date-fns": "^2.28.0",
        "express": "^4.18.1",
        "express-rate-limit": "^6.2.0",
        "helmet": "^5.0.2",
        "lodash": "^4.17.21",
        "nestjs-typeorm-paginate": "^3.1.3",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pg": "^8.7.3",
        "prom-client": "^14.1.0",
        "puppeteer": "1.19.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rwanda": "^2.1.2",
        "rxjs": "^7",
        "swagger-ui-express": "^4.4.0",
        "typeorm": "0.2.41",
        "typeorm-seeding": "^1.6.1",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.1.5",
        "@nestjs/schematics": "^7.3.0",
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cron": "^1.7.3",
        "@types/express": "^4.17.11",
        "@types/jest": "^26.0.22",
        "@types/multer": "^1.4.7",
        "@types/node": "^14.14.36",
        "@types/passport-local": "^1.0.34",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^26.6.3",
        "prettier": "^2.3.2",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.4",
        "ts-loader": "^9.3.0",
        "ts-node": "^10.8.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
